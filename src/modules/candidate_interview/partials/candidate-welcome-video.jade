.content-wrapper.candidate-view.welcome-interview(style='padding-left: 0px;')
  .content-wrapper(style='margin-top:0px;')
    .col-md-12
      .candidate-view-steps.step
        ul.step-tab
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon1.png', alt='')
            .step-name(data-translate="WELCOME")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon2.png', alt='')
            .step-name(data-translate="YOUR-PROFILE")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon3.png', alt='')
            .step-name(data-translate="PREPARE")
          li.active
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon4.png', alt='')
            .step-name(data-translate="INTERVIEW")
        .step-body
          .col-lg-12.col-md-12.col-sm-12.col-xs-12
            .col-lg-5.col-md-5.col-sm-5.col-xs-12.col-md-offset-1
              .panel.panel-default.welcome-panel               
                .panel-heading(data-translate="WELCOME-VIDEO")
                .panel-body
                  p 
                  p
                    .welcome-div.embed-responsive.embed-responsive-16by9                     
                      iframe(class="youtube-player" type="text/html" width="640" height="385" ng-src="{{CandidateWelcomeVideoCtrl.trustSrc(CandidateWelcomeVideoCtrl.movie.src)}}" allowfullscreen frameborder="0")
            .col-lg-5.col-md-5.col-sm-5.col-xs-12
              .panel.panel-default                       
                .panel-heading(data-translate="YOUR-WEBCAME")
                .panel-body
                  p
                  p
                    .welcome-div.embed-responsive.embed-responsive-16by9                             
                      video(id='webCamInterviewWelcome')
              .col-md-12.col-sm-12.col-xs-12
                .btn-left2
                  md-button.md-raised.savedata-btn(data-ng-click="CandidateWelcomeVideoCtrl.startInterview()", data-translate="NEXT")            
            
