  .col-sm-12.col-xs-12.video-response-container
    div
      .preparation-time-timer.embed-responsive.embed-responsive-16by9.response-video(ng-if='videoResponseQuestionCtrl.question.preparationTime > 0') {{videoResponseQuestionCtrl.question.preparationTime}}
