.content-wrapper.candidate-view
  .content-wrapper(style='margin-top:0px;')
    .row
      .candidate-view-steps.step
        ul.step-tab
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon1.png', alt='')
            .step-name(data-translate="WELCOME")
          li.active
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon2.png', alt='')
            .step-name(data-translate="YOUR-PROFILE")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon3.png', alt='')
            .step-name(data-translate="PREPARE")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon4.png', alt='')
            .step-name(data-translate="INTERVIEW")
        .step-body.prepare-body
          ul
            li
            li
              .whte-bg
                .user-all-details
                  p.title Enter Advance Criteria Details
                  hr
                  .rgstr-form
                    form(name='infoForm' role="form")
                      .input-fld(data-ng-repeat='info in candidateInterviewProfileCtrl.additionalInfo')
                        md-input-container.md-block(flex-gt-sm='')
                          label {{info.option}}
                           span.mandatory-filed(data-ng-if='info.isManadatory', style='float: none !important; margin-left: 5px !important;') *
                          input(type='text', id='txt_{{info.optionId}}', name='txt_{{info.optionId}}', ng-keypress="candidateInterviewProfileCtrl.checkForRequired(info)", ng-keyup="candidateInterviewProfileCtrl.checkForRequired(info)", ng-keydown="candidateInterviewProfileCtrl.checkForRequired(info)", ng-blur="candidateInterviewProfileCtrl.checkForRequired(info)" ng-focus="candidateInterviewProfileCtrl.checkForRequired(info)")
                          span.error-message-email(id='spn_{{info.optionId}}', style="display:none;") Please enter {{info.option}}
                      .input-fld(data-ng-if='false')
                        label(data-translate="RESUME")
                        .brws-btn-sec
                          .btn-brws
                            input(type='file')
                      .input-fld(data-ng-if='false')
                        label(data-translate="LINKDIN-LINK")
                        input.form-control(type='text',placeholder='www.linkdin.com')
                      .input-fld(data-ng-if='false')
                        label(data-translate="FACEBOOK-LINK")
                        input.form-control(type='text',placeholder='www.facebook.com')
                      .btn-sec
                        md-button.md-raised.savedata-btn.btn-interview(data-ng-click="candidateInterviewProfileCtrl.saveCriteriaAndGoNext()" data-translate="NEXT")
                        md-button.md-raised.savedata-btn.btn-interview.pull-left(data-ui-sref='ci.interview ({interviewCode : candidateInterviewProfileCtrl.interviewDetails.interviewCode})') Back
