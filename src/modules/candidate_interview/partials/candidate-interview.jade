                                    .modal-footer
                                      md-button.md-fab.md-mini.md-raised.md-primary(aria-label='footer button',type='button',data-dismiss='modal') OK
                            .row
                              .col-xs-8.col-md-8.col-sm-8
                              .col-md-4.col-sm-4.hidden-xs.btn-next-candidate
                                md-button.md-raised.savedata-btn(aria-label='next  button',data-ng-click='candidateInterviewCtrl.registerCandidate()', tabindex="10", data-translate="NEXT", data-ng-disabled='!candidateInterviewCtrl.isNextEnable')
                              .col-xs-4.hidden-lg.hidden-sm.hidden-md
                                md-button.md-fab.md-mini.md-raised.savedata-btn(aria-label='next xs button',data-ng-click='candidateInterviewCtrl.registerCandidate()', tabindex="10", data-ng-disabled='!candidateInterviewCtrl.isNextEnable')
                                  i.fa.fa-angle-double-right(aria-hidden='true')
    .row(data-ng-if='candidateInterviewCtrl.isInvalidLink')
       div.invalid-section
         h4 Invalid interview link.
         md-button.md-raised.md-primary(aria-label='interview button' , data-ng-click='candidateInterviewCtrl.goBack()') Go Back


