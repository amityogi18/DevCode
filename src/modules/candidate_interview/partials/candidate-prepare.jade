.content-wrapper.candidate-view
  .content-wrapper.align-from-top
    .row
      .candidate-view-steps.step
        ul.step-tab
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon1.png', alt='')
            .step-name(data-translate="WELCOME")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon2.png', alt='')
            .step-name(data-translate="YOUR-PROFILE")
          li.active
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon3.png', alt='')
            .step-name(data-translate="PREPARE")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon4.png', alt='')
            .step-name(data-translate="INTERVIEW")
        .step-body
          .step-3-wrapper
            .step-accordion
              .whte-bg
                .step-accordion
                   help-component
                   hr
                   md-button.md-raised.savedata-btn.btn-interview.back-btn-position(data-ng-click='candidateInterviewPrepareCtrl.goBack()', data-translate="BACK")
                   button.btn.btn-success.pull-right.btn-interview.mt-next-btn-position(data-ui-sref='ci.instruction' data-translate="NEXT" ng-disabled="candidateInterviewPrepareCtrl.videoCheck || candidateInterviewPrepareCtrl.audioCheck || candidateInterviewPrepareCtrl.speedCheck")

