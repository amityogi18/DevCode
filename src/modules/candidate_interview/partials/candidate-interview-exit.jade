.content-wrapper.candidate-view
  
    .row
      .candidate-view-steps.step
        ul.step-tab
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon1.png', alt='')
            .step-name(data-translate="WELCOME")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon2.png', alt='')
            .step-name(data-translate="YOUR-PROFILE")
          li
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon3.png', alt='')
            .step-name(data-translate="PREPARE")
          li.active
            figure.step-icons
              span
                img.welcome-image(src='../../../public/img/icon4.png', alt='')
            .step-name(data-translate="INTERVIEW")
        .step-body
          .col-md-12.exit-video-show
            .main-body-wrapper
              .default-form
                .col-md-12
                  .upper-form-wrapper
                    .col-md-4
                    .col-md-6
                      .panel.panel-default
                        // Default panel contents
                        .panel-heading.title-question Exit Video
                        .panel-body
                          p.embed-responsive.embed-responsive-16by9(data-ng-show='exitVideoCtrl.isYoutubeLink')
                              iframe(id='exitIframe', src="{{exitVideoCtrl.trustSrc(exitVideoCtrl.videoUrl)}}", frameborder='0', allowfullscreen='')
                          p.embed-responsive.embed-responsive-16by9(data-ng-show='!exitVideoCtrl.isYoutubeLink')
                              video(id='exitVideo')
                          hr
                          p
                            button.btn-record.exit-btn(type='button', data-ng-click='exitVideoCtrl.exitInterview()') Close

