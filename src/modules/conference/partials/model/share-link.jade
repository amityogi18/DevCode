.popover-content-call1(style='width:230px !important; background: white;')
  .form-group
    table.call-table(cellpadding='4', cellspacing='4')
      tr.copylink(ng-click='ConferenceWebrtcCtrl.copyfun()', data-ng-show="!ConferenceWebrtcCtrl.isSendMailShow")
        td
          i.fa.fa-files-o(aria-hidden='true')
        td.black
          | Copy meeting link
      tr(data-ng-show="!ConferenceWebrtcCtrl.isSendMailShow")
        td(colspan='2')
           hr
      tr.sendinvite(data-ng-show="!ConferenceWebrtcCtrl.isSendMailShow")
        td
          i.fa.fa-envelope(aria-hidden='true')
        td
          span(data-ng-click="ConferenceWebrtcCtrl.showHideShareMail()" style="cursor:pointer;") Send email Invitation
      tr(data-ng-show="!ConferenceWebrtcCtrl.isSendMailShow")
        td(colspan='2')
           hr Â 
      tr(data-ng-show="ConferenceWebrtcCtrl.isSendMailShow")
        td(colspan='2')
          i.fa.fa-envelope(aria-hidden='true', style="color:grey;")
          span(style="margin-left:8px;") Enter Email to share link
          i.fa.fa-times-circle-o.fa-lg(aria-hidden='true', data-ng-click="ConferenceWebrtcCtrl.showHideShareMail()", style="color: rgba(202, 38, 38, 0.84); float: right; cursor: pointer; margin-right: 10px; margin-top: 7px; font-size: 18px;")
      tr(data-ng-show="ConferenceWebrtcCtrl.isSendMailShow")
        td(colspan='2')
           hr(style="margin-right:15px;")
      tr(data-ng-show="ConferenceWebrtcCtrl.isSendMailShow")
        td(colspan='2')
           textarea#addpart(style="height: 100px; width: 185px; border-radius:5px;", name="txtEmail", placeholder="Please enter email id", ng-list="", ng-model="ConferenceWebrtcCtrl.inviteParticipant", ng-click="ConferenceWebrtcCtrl.setFocus('addpart')")
           hr
           button.btn.btn-sm.invitebtn(type='button',ng-disabled='!ConferenceWebrtcCtrl.inviteParticipant.length', ng-click="ConferenceWebrtcCtrl.inviteparticipants()") Send Invitation Now


