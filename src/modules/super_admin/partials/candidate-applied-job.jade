.integration-container
  .video-intro-heading
    span.video-intro-1 Candidate Applied Positions
  .panel.panel-default
    .panel-heading.dashboard-profile-heading APPLIED POSITIONS
    .panel-body
      .row
        .col-xs-12.col-sm-6.col-md-4
          md-input-container.md-block.position-search-continer(flex="100")
            label.position-search-lebel Search...
            input(type='text', ng-model='candidateAppliedJobCtrl.searchFilter.search')
            md-icon.position-search(md-font-set='fa') &#xf002
        .col-md-12.col-sm-12.col-xs-12
          p.text-label(ng-hide='candidateAppliedJobCtrl.candidateAppliedList.length < 1') Showing 
            span
              strong 1-{{candidateAppliedJobCtrl.candidateAppliedList.length}}
              |  of  
              strong
                {{candidateAppliedJobCtrl.candidateAppliedCount}}     
              |  records     
      .row(data-ng-show="candidateAppliedJobCtrl.candidateAppliedCount > 0")
        .table-responsive
          table.table.table-condensed.table-bordered.table-striped.table-responsive.active-clients-table(ng-table='candidateAppliedJobCtrl.candidateAppliedTableParams', ng-table-columns-binding="candidateAppliedJobCtrl.cols")
            tr(ng-repeat-start='candidateApplied in $data')    
              td(class='col-sm-1' title="'Sr. No.'" style="text-align: center;") ({{$index + 1}})
              td(class='col-sm-2' title="'Job Title'" sortable="'jobTitle'" ng-data='candidateApplied.jobTitle') {{candidateApplied.jobTitle}}
              td(class='col-sm-2' title="'Company Name'" sortable="'companyName'" ng-data='candidateApplied.companyName') {{candidateApplied.companyName}}
              td(class='col-sm-2' title="'Job Portal Name'"  sortable="'jobOfPortalName'") {{candidateApplied.jobOfPortalName}}
              td(class='col-sm-1' title="'Applied Date'"  sortable="'appliedDate'" ng-data='candidateApplied.appliedDate') {{candidateApplied.appliedDate | date : "MM/dd/yyyy"}}
              td(class='col-sm-2' title="'Job Location'"  sortable="'jobLocation'" ng-data='candidateApplied.jobLocation') {{candidateApplied.jobLocation}}
              td(class='col-sm-1' title="'Action'" style="text-align: center;") 
                button.btn.btn-success.applied-status-btn(data-ui-sref='sa.candidate-applied-job-description({id:candidateApplied.jobId})', type='button') Details
            tr.collapse(ng-repeat-end='ng-repeat-end', id='accordionActive_{{$index}}')
      .row(data-ng-show="candidateAppliedJobCtrl.candidateAppliedCount == 0")
        .col-md-12
          .alert.alert-success.candidate-data-info No Data Found  
        