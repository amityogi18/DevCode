.payment    
    form#payment-form(name='payment-elements')
        h4 Credit/Debit Card
        .group          
          label(for='card-element')
            span Card
            #card-element.field
        .outcome
          #card-errors.error
        h4 Billing Information
        .group
          label
            span Name
            input.field(type="text", placeholder='Cardholder Name', name="cardholderName", maxlength="25", required)
          label
            span Phone
            input.field(placeholder='(123) 456-7890', type='tel', name="cardholderPhone", maxlength="14", required)
          label
            span Email
            input.field(placeholder='john@gmail.com', type='email', name="cardholderEmail", maxlength="50", required)
          label
            span Address Line 1
            input.field(type="text", placeholder='Address Line 1', name="cardholderAddress1", maxlength="40", required)
          label
            span Address Line 2
            input.field(type="text", placeholder='Address Line 2', name="cardholderAddress2", maxlength="40")
          label
            span Country
            input.field(type="text", placeholder='USA', name="cardholderCountry", maxlength="20")
          label
            span State
            input.field(type="text", placeholder='Virginia', name="cardholderState", maxlength="20")
          label
            span City
            input.field(type="text", placeholder='Fairfax', name="cardholderCity", maxlength="20")
          label
            span Postal Code
            input.field.address_zip(type="text", placeholder='41170', name="cardholderZip", maxlength="6")
        .form-group.row
          span.col-sm-offset-1.col-sm-10.col-xs-12
            input(type='checkbox', name='agree', required='required')
            label.agree-box
                div
                  | I Have Read And Agree To The
                a.privacy-policy-link(data-toggle='modal', data-target='#termsCondition') Terms & Conditions
        button(type='submit') Pay        
