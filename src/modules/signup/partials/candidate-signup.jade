                        span.error-msg(data-ng-if='candidateSignupCtrl.errmsgcon !== ""') {{candidateSignupCtrl.errmsgcon}}
                      //label Contact Number
                      //input(type='text', name='contactNumber', data-ng-model='candidateSignupCtrl.contactNumber',onkeypress='return event.charCode <= 57',minlength="10",ng-pattern="/^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$/" , maxlength='14',required)
                      //div(ng-messages='candidateSignupCtrl.candidateSignupForm.contactNumber.$error', ng-if='candidateSignupCtrl.candidateSignupForm.$error || candidateSignupCtrl.candidateSignupForm.contactNumber.$touched')
                        div(ng-message='required')
                            | Please Enter 
                            b Contact Number
                        div(ng-message='pattern') Must be a valid 14 digit phone number   
                      //span.error-msg(data-ng-if='candidateSignupCtrl.errmsgcon !== ""') {{candidateSignupCtrl.errmsgcon}}
                  div(layout-margin='', layout-gt-sm="row" flex-gt-sm='')
                    md-input-container.md-block(flex-gt-sm='')
                      label Password
                      input(type='password', name='password', data-ng-model='candidateSignupCtrl.password', minlength="6", maxlength="15", ng-pattern="/^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[^\w\s]).{6,15}$/",  ng-change="candidateSignupCtrl.checkPasswordEquality()",required)
                      div(ng-messages='candidateSignupCtrl.candidateSignupForm.password.$error', ng-if='candidateSignupCtrl.candidateSignupForm.$error || candidateSignupCtrl.candidateSignupForm.password.$touched')
