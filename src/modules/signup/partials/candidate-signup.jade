                        md-select-header.demo-select-header
                          input.demo-header-searchbox.md-text(ng-model='candidateSignupCtrl.searchDepartment', type='search', placeholder='Search for a functional area..',ng-keydown="$event.stopPropagation()")
                        md-option(ng-repeat='department in candidateSignupCtrl.departmentList|filter:candidateSignupCtrl.searchDepartment', value='{{department.id}}') {{department.name}}
                      div(ng-messages='candidateSignupCtrl.candidateSignupForm.departmentList.$error', ng-if='candidateSignupCtrl.candidateSignupForm.$error || candidateSignupCtrl.candidateSignupForm.departmentList.$touched')
                        div(ng-message='required')
                            | Please Select 
                            b Functional Area 
                      //span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.$submitted || candidateSignupCtrl.candidateSignupForm.departmentList.$touched')
                        span(data-ng-show='candidateSignupCtrl.candidateSignupForm.departmentList.$dirty && candidateSignupCtrl.candidateSignupForm.departmentList.$invalid')
                        span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.departmentList.$error.required') Please Select Functional Area
                    md-input-container.md-block(flex-gt-sm='')
                      label Role
                      md-select(data-ng-model='candidateSignupCtrl.designationId', ng-disabled='candidateSignupCtrl.isDesignationDisabled',data-md-container-class='selectdemoSelectHeader', name='designation',md-on-close="candidateSignupCtrl.clearSearchSkill()", required)
                        md-select-header.demo-select-header
                          input.demo-header-searchbox.md-text(ng-model='candidateSignupCtrl.searchSkill', type='search', placeholder='Search skill..',ng-keydown="$event.stopPropagation()")
                        md-option(ng-repeat='designation in candidateSignupCtrl.designationList|filter:candidateSignupCtrl.searchSkill', value='{{designation.id}}') {{designation.candidateDesignation}}
                      div(ng-messages='candidateSignupCtrl.candidateSignupForm.designation.$error', ng-if='candidateSignupCtrl.candidateSignupForm.$error || candidateSignupCtrl.candidateSignupForm.designation.$touched')
                        div(ng-message='required')
                          | Please Select 
                          b Designation
                      //span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.$submitted || candidateSignupCtrl.candidateSignupForm.designation.$touched')
                        span(data-ng-show='candidateSignupCtrl.candidateSignupForm.designation.$dirty && candidateSignupCtrl.candidateSignupForm.designation.$invalid')
                        span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.designation.$error.required') Please Select Designation
                  div(layout-margin='', layout-gt-sm="row" flex-gt-sm='')
                    label CAPTCHA
                    .col-sm-6.col-xs-12
                      .g-recaptcha.captcha-field(data-sitekey='{{candidateSignupCtrl.SITEKEY}}')
                  div(layout-margin='', flex-gt-sm='')             
                    md-checkbox.md-primary(aria-label='agree' name='agree', data-ng-model='candidateSignupCtrl.isAgree',  required='required')               
                    span.agree-ondemand
                      | By clicking on this box you agree with OnDemand
                      a.terms-condition-link(href='javascript:void(0)',data-toggle="modal", data-target="#termsConditionModalCandidate") Terms & Conditions
                      | &
                      a.privacy-policy-link(href='javascript:void(0)',data-toggle="modal", data-target="#privacyPolicy") Privacy Policy
                      .col-md-12                     
                        span.error-message(data-ng-show='candidateSignupCtrl.candidateSignupForm.$submitted || candidateSignupCtrl.candidateSignupForm.agree.$touched')
                          span(data-ng-show='candidateSignupCtrl.candidateSignupForm.agree.$dirty && candidateSignupCtrl.candidateSignupForm.agree.$invalid')
                          span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.agree.$error.required') Please Click To Agree To The Terms And Conditions
                  .form-group.row
                    .sep-dev
                    .col-sm-12.col-xs-12.col-md-12.candidate-center
                      md-button.md-raised.md-primary.candidate-submit-btn.md-signup(data-ng-click='candidateSignupCtrl.doCandidateSignup()') Submit
                      label.error-lbl {{candidateSignupCtrl.errorLblTxt}}
