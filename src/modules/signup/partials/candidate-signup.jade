      .content-bg
    .nav.navbar.navbar-default.singup-navebar.navbar-fixed-top.hidden-lg.hidden-sm.hidden-md
    .header-spacer--standard
    .container
      .row.display-flex
        .col-xl-6.col-lg-4.col-md-4.col-sm-12.col-xs-12
          .landing-content
            .user-login
              a.small-logo1(data-ui-sref='app.user-login')
                img(src='../../../public/img/bigoda-logo.png', alt='')
            h1 Welcome to OnDemand
            h4 Register with us and get your dream job today,
            p
              |  Register yourself, It’s free of cost and easy as never before, Showcase your skills in introduction video and share it with thousands of recruiters, 
              |  Search your dream job out of millions of opportunities posted daily,
              |  Take certification test against your skills to enrich your profile, Get free job assistance and resume suggestions to increase your chances to get hired.
                
        .col-xl-5.col-lg-8.col-md-8.col-sm-12.col-xs-12.second-section  
          .col-md-12.col-sm-10.col-xs-12.registration-login-form
            .panel.panel-default1.candidate-heading1
              .panel-heading.login-heading1
                | Register
                span.already-user
                  a.login-link(data-ui-sref='app.candidate-login') Already a candidate? Login
              .sep-dev    
              .panel-body1
                form(role='form', name='candidateSignupCtrl.candidateSignupForm' novalidate)
                  div(layout-margin='', layout-gt-sm="row" flex-gt-sm='')
                    md-input-container.md-block(flex-gt-sm='')
                      label First Name
                      input(type='text', name='firstName',onkeypress='return event.charCode >= 65 && event.charCode <= 90 ||  event.charCode >= 97 && event.charCode <= 122 || event.charCode == 32',maxlength='20',ng-blur='candidateSignupCtrl.removeInvalidFirstName(candidateSignupCtrl.firstName)',data-ng-model='candidateSignupCtrl.firstName',required)
                      div(ng-messages='candidateSignupCtrl.candidateSignupForm.firstName.$error', ng-if='candidateSignupCtrl.candidateSignupForm.$error || candidateSignupCtrl.candidateSignupForm.firstName.$touched')
                        div(ng-message='required')
                            | Please Enter 
                            b First Name 
                      //span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.$submitted || candidateSignupCtrl.candidateSignupForm.firstName.$touched')
                        span(data-ng-show='candidateSignupCtrl.candidateSignupForm.firstName.$dirty && candidateSignupCtrl.candidateSignupForm.firstName.$invalid')
                        span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.firstName.$error.required') Please Enter First Name
                    md-input-container.md-block(flex-gt-sm='')
                      label Last Name
                      input(type='text', name='lastName',onkeypress='return event.charCode >= 65 && event.charCode <= 90 ||  event.charCode >= 97 && event.charCode <= 122 || event.charCode == 32',maxlength='20',ng-blur='candidateSignupCtrl.removeInvalidLastName(candidateSignupCtrl.lastName)', data-ng-model='candidateSignupCtrl.lastName',required)
                      div(ng-messages='candidateSignupCtrl.candidateSignupForm.lastName.$error', ng-if='candidateSignupCtrl.candidateSignupForm.$error || candidateSignupCtrl.candidateSignupForm.lastName.$touched')
                        div(ng-message='required')
                            | Please Enter 
                            b Last Name  
                      //span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.$submitted || candidateSignupCtrl.candidateSignupForm.lastName.$touched')
                        span(data-ng-show='candidateSignupCtrl.candidateSignupForm.lastName.$dirty && candidateSignupCtrl.candidateSignupForm.lastName.$invalid')
                        span.error-msg(data-ng-show='candidateSignupCtrl.candidateSignupForm.lastName.$error.required') Please Enter Last Name
                  div(layout-margin='', layout-gt-sm="row" flex-gt-sm='')      
                    md-input-container.md-block(flex-gt-sm='')
                      label Email
                      input(type='text', name='email', maxlength='50', data-ng-model='candidateSignupCtrl.email', ng-pattern="/^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i", required )
                      div(ng-messages='candidateSignupCtrl.candidateSignupForm.email.$error', ng-if='candidateSignupCtrl.candidateSignupForm.$error || candidateSignupCtrl.candidateSignupForm.email.$touched')
                        div(ng-message='required')
                            | Please Enter 
                            b Email Address
                        div(ng-message='pattern') Must be a valid Email address

                      //span.error-msg(data-ng-if='candidateSignupCtrl.candidateSignupCtrl.errormessage !== ""') {{candidateSignupCtrl.errormessage}} 
                    md-input-container.md-block(flex-gt-sm='')
