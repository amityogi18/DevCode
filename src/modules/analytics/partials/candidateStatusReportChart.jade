.analytics-box-section.analytics-section
  div(ng-cloak='')
    md-content.md-padding(layout-xs='column', layout='row')
      md-card.candidate-status-report-section
        md-card-actions
            .candidate-status-heading
              i.fa.fa-user.canidate-status-icon(aria-hidden='true')
              span(data-translate='CANDIDATE-STATUS-REPORT')
            #pie-chart.panel-body.pie-height
              .pie-dec-chart_01.chart-0.col-sm-8.col-md-8.col-xs-12
                canvas#pie.chart.chart-pie.chart-xs(chart-colors='candidateStatusReportCtrl.colors', chart-data='candidateStatusReportCtrl.candidateStatusReportData.candidateStatusReport.data', chart-labels='candidateStatusReportCtrl.candidateStatusReportData.candidateStatusReport.labels', chart-options='candidateStatusReportCtrl.options')
              .pull-right.managing.col-sm-4.col-md-4.col-xs-12
                ul.col-sm-9.col-md-9.col-xs-6.managing
                  li(ng-repeat='row in candidateStatusReportCtrl.candidateStatusReportData.candidateStatusReport.labels')
                    i.fa.fa-square(aria-hidden='true', ng-class="{'label_1':row == 'Completed','label_2':row == 'On Hold','label_3':row == 'New Candidate','label_4': row=='In Review','label_5':row == 'Hired','label_6': row=='Rejected','label_7':row == 'Inprogress','label_8': row=='Archived'}")
                    span
                      strong {{row}}
                ul.col-sm-3.col-md-3.col-xs-6.managing
                  li(ng-repeat='x in candidateStatusReportCtrl.candidateStatusReportData.candidateStatusReport.data track by $index')
                    span
                      strong {{x}}
